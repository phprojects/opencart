{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form" class="form-horizontal">
          <div class="table-responsive">
    				<table class="table table-bordered table-hover">
              {% if not edit %}
              <tr>
                <td class="required">{{ entry_interface }}</td>
                <td>
          				<select name="interface" class="form-control">
  	              	<option value="false">{{ text_select }}</option>
  	              	{% for interface in interfaces %}
	              		<option value="{{ interface }}"{{ interface == post_interface ? ' selected="selected"' : '' }}>{{ interface }}</option>
  	              	{% endfor %}
          				</select>
                	{% if error_interface %}
                	<div class="text-danger">{{ error_interface }}</div>
              		{% endif %}
              	</td>
              </tr>
              <tr>
                <td class="required">{{ entry_directory }}</td>
                <td>
              		<select name="directory" class="form-control">
                  	<option value="false">{{ text_select }}</option>
                  	{% for directory in directories %}
	              		<option value="{{ directory }}"{{ directory == post_directory ? ' selected="selected"' : '' }}>{{ directory }}</option>
                  	{% endfor %}
              		</select>
              		{% if error_interface %}
              		<div class="text-danger">{{ error_directory }}</div>
              		{% endif %}
              	</td>
              </tr>
              <tr>
                <td class="required">{{ entry_filename }}</td>
                <td>
                  <input type="text" class="form-control" name="filename" value="{{ post_filename }}" />
                  {% if error_filename %}
                  <div class="text-danger">{{ error_filename }}</div>
                  {% endif %}
                </td>
              </tr>
              <tr>
                <td class="required">{{ entry_key }}</td>
                <td>
                  <input type="text" class="form-control" name="key" value="{{ post_key }}" />
                  {% if error_key %}
                  <div class="text-danger">{{ error_key }}</div>
                  {% endif %}
                </td>
              </tr>
              {% else %}
              <tr>
                <td>{{ entry_interface }}</td>
                <td><input readonly="readonly" type="text" class="form-control" name="interface" value="{{ post_interface }}" /></td>
              </tr>
              <tr>
                <td>{{ entry_directory }}</td>
                <td><input readonly="readonly" type="text" class="form-control" name="directory" value="{{ post_directory }}" /></td>
              </tr>
              <tr>
                <td>{{ entry_filename }}</td>
                <td><input readonly="readonly" type="text" class="form-control" name="filename" value="{{ post_filename }}" /></td>
              </tr>
              <tr>
                <td>{{ entry_key }}</td>
                <td><input readonly="readonly" type="text" class="form-control" name="key" value="{{ post_key }}" /></td>
              </tr>
          		{% endif %}
              <tr>
                <td>{{ entry_value }}</td>
                <td><textarea name="value" class="form-control" rows="5" cols="80">{{ post_value }}</textarea>
              </tr>
            </table>
  				</div>
        </form>
			</div>
    </div>
  </div>
</div>
{{ footer }}