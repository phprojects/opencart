{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-right">
        <button type="submit" form="form-html" formaction="{{ action }}" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fas fa-save"></i></button>
        {% if variant %}
          <button type="button" id="form-variant" data-toggle="tooltip" title="{{ button_variant }}" class="btn btn-warning"><i class="fas fa-save"></i></button>
        {% endif %}
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-light"><i class="fas fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>
	<div class="container-fluid">
		{% if success %}
			<div class="alert alert-success alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{success}}
				<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
		{% endif %}
		{% if error_warning %}
			<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{error_warning}}
				<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
		{% endif %}
		
		<div class="card">
			<div class="card-header">
				<h3 class="panel-title"><i class="fa fa-pencil"></i> {{text_edit}}</h3>
			</div>
			<div class="card-body">
				<form action="{{action}}" method="post" enctype="multipart/form-data" id="form-html">
					  <ul class="nav nav-tabs">
						  <li class="nav-item"><a href="{{tab_action_main}}" class="nav-link"><i class="fa fa-file"></i> {{tab_main}}</a></li>
						  <li class="nav-item active"><a href="{{tab_action_settings}}" data-toggle="tab" class="nav-link active"><i class="fa fa-cog"></i> {{tab_settings}}</a></li>
						  <li class="nav-item"><a href="{{tab_action_about}}" class="nav-link"><i class="fa fa-question"></i> {{tab_about}}</a></li>
					  </ul>
				  <div class="tab-content">
					<div class="tab-pane active">
						<table class="table">
							<tbody>
								<tr>
									<td width="200">
										{{layout_information}}
									</td>
									<td>
										<select name="settings[html_code_layout_i]" class="form-control">
											{% for layout in layouts %}					
												<option value="{{layout['layout_id']}}"{% if settings['html_code_layout_i'] == layout['layout_id'] %} selected="selected" {% endif %}>{{layout['name']}}</option>
											{% endfor %}
										</select>
									</td>
								</tr>
								<tr>
									<td>
										{{layout_category}}
									</td>
									<td>
										<select name="settings[html_code_layout_c]" class="form-control">
											{% for layout in layouts %}					
												<option value="{{layout['layout_id']}}"{% if settings['html_code_layout_c'] == layout['layout_id'] %} selected="selected" {% endif %}>{{layout['name']}}</option>
											{% endfor %}
										</select>
									</td>
								</tr>
								<tr>
									<td>
										{{layout_product}}
									</td>
									<td>
										<select name="settings[html_code_layout_p]" class="form-control">
											{% for layout in layouts %}					
												<option value="{{layout['layout_id']}}"{% if settings['html_code_layout_p'] == layout['layout_id'] %} selected="selected" {% endif %}>{{layout['name']}}</option>
											{% endfor %}
										</select>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
				  </div>
				</form>
			</div>
		</div>
	</div>
</div>
{{ footer }}