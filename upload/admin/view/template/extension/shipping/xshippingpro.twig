 function makedropzone() {
     var dragged;
     $("#method-list").on('drag', function(e) { 
        e.preventDefault();
     });
     $("#method-list").on('dragstart', function(e) { 
        var $this = $(e.target);
        dragged = e.target;
        $this.removeClass('dragging').addClass('dragging');
        $this.css('cursor','move');
     });
     $("#method-list").on('dragend', function(e) { 
        var $this = $(e.target);
        $this.removeClass('dragging');
        $this.css('cursor','default');
     });
     $("#method-list").on('dragover', function(e) { 
        e.preventDefault();
     });
     $("#method-list").on('dragenter', function(e) { 
        e.preventDefault();
        var $this = $(e.target);
        if ( $this.hasClass('draggable') && event.target !== dragged) {
           $this.removeClass('dropable').addClass('dropable');
        }
     });
     $("#method-list").on('dragleave', function(e) { 
        e.preventDefault();
        var $this = $(e.target);
        if ($this.hasClass('draggable') ) {
           $this.removeClass('dropable');
        }
     });
     $("#method-list").on('drop', function(e) {
         var $this = $(e.target);
         if ($this.hasClass('draggable')  && event.target !== dragged) { 
            var from =  $(dragged).closest('li');
            var to =  $(event.target).closest('li');
            var tmp = from.prev('li');
            to.prev('li').after(from);
            tmp.after(to);
            $(this).find('li > a').removeClass('dropable dragging');
         }
     });
 }

