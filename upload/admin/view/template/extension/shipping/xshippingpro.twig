{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
      <div class="container-fluid">
      <div class="pull-right float-right">
        <button type="button" id="save_form" form="form-xshippingpro" value="save" name="action" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fas fa-save"></i></button>
        <a id="quick_save" onclick="return false;" data-toggle="tooltip" title="{{ button_save_continue }}" id="quick_save" class="btn btn-info"><i class="fa fas fa-window-restore"></i></a>&nbsp;
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default btn-light"><i class="fa fas fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
          {% for breadcrumb in breadcrumbs %}
            <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
          {% endfor %}
      </ul>
      </div>
   </div>
   <div class="container-fluid">
      {% if error_warning %}
        <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
      {% endif %}
      {% if success %}
        <div class="alert alert-success"><i class="fa fa-exclamation-circle"></i> {{ success }}
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
      {% endif %}
      <div class="card panel panel-default">
        <div class="panel-heading card-header">
           <h3 class="panel-title"><i class="fa fas fa-pencil-alt"></i> {{ text_edit }}</h3>
        </div>
        <div class="panel-body card-body">
          <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-xshippingpro" class="form-horizontal">
            <input type="file" class="import-csv" accept="text/csv" name="file" />
            <div class="row">
                <div class="col-sm-3">
                   <ul id="method-list" class="nav flex-column">
                     <li class="nav-item"><a href="#tab-general" draggable="false" class="nav-link global" data-toggle="tab">{{ tab_general }}</a></li>
                      {% for no_of_tab, name in methods %}
                        <li class="nav-item"><a draggable="true" class="nav-link draggable tab{{ no_of_tab }}" href="#shipping-{{ no_of_tab }}" data-toggle="tab">
                      {{ name }}</a></li>
                      {% endfor %}
                   </ul>
                  <button class="btn btn-success add-new" data-toggle="tooltip" form="form-xshippingpro" type="button"  data-placement="bottom"  data-original-title="{{ text_add_new_method }}"><i class="fa fa-plus"></i></button>
                </div>
                <div class="col-sm-9">
                  <div id="shipping-container" class="tab-content">
                    <div class="tab-pane active global-tab-content" id="tab-general">
                      <ul class="nav nav-tabs" id="language-heading">
                        {% for language in languages %}
                          <li class="nav-item"><a href="#language{{ language.language_id }}heading" class="nav-link {% if loop.first %} active {% endif %}" data-toggle="tab"><img src="{{ language_dir }}{{ language.image }}" title="{{ language.name }}" /> {{ language.name }}</a></li>
                        {% endfor %}
                      </ul>
                      <div class="tab-content global-heading">
                        {% for language in languages %}
                          <div class="tab-pane {% if loop.first %} active {% endif %}" id="language{{ language.language_id }}heading">
                          <div class="form-group row required">
                            <label class="col-sm-3 control-label col-form-label" for="lang-heading{{ language.language_id }}"><span data-toggle="tooltip" title="{{ tip_heading }}">{{ text_heading }} </span></label>
                            <div class="col-sm-9">
                              <input type="text" name="shipping_xshippingpro_heading[{{ language.language_id }}]" value="{{ shipping_xshippingpro_heading[language.language_id] }}" placeholder="{{ text_heading }}" id="lang-heading{{ language.language_id }}" class="form-control" />
                            </div>
                          </div>
                        </div>
                        {% endfor %}
                      </div>
                      <ul class="nav nav-tabs">
                          <li class="nav-item active"><a href="#global-general" class="nav-link active" data-toggle="tab">{{ tab_general_general }}</a></li>
                          <li class="nav-item"><a href="#global-group" class="nav-link" data-toggle="tab">{{ tab_general_global }}</a></li>
                          <li class="nav-item"><a href="#global-export" class="nav-link" data-toggle="tab">{{ tab_import_export }}</a></li>
                         <li class="nav-item"><a href="#global-help" class="nav-link" data-toggle="tab">{{ text_help }}</a></li>
                      </ul>
                      <div class="tab-content">
                        <div class="tab-pane active" id="global-general">
                          <div class="form-group row">
                            <label class="col-sm-3 control-label col-form-label" for="input-sort-order"><span data-toggle="tooltip" title="{{ tip_sorting_global }}">{{ entry_sort_order }} </span></label>
                            <div class="col-sm-9">
                              <input type="text" name="shipping_xshippingpro_sort_order" value="{{ shipping_xshippingpro_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
                            </div>
                          </div>
                          <div class="form-group row">
                            <label for="shipping_xshippingpro_desc_mail" class="col-sm-3 control-label col-form-label">{{ text_description }} </label>
                            <div class="col-sm-9">
                              <input {% if shipping_xshippingpro_desc_mail %} checked {% endif %} type="checkbox" name="shipping_xshippingpro_desc_mail" value="1" id="shipping_xshippingpro_desc_mail" />
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 control-label col-form-label" for="input-group-sorting"><span data-toggle="tooltip" title="{{ tip_text_sort_type }}">{{ text_sort_type }}</span></label>
                            <div class="col-sm-9">
                              <select name="shipping_xshippingpro_sorting" id="input-group-sorting" class="form-control">
                                {% for sort_option_key, sort_option_value in sort_options  %}
                                  <option value="{{ sort_option_key }}" {% if shipping_xshippingpro_sorting == sort_option_key %} selected {% endif %}>{{ sort_option_value }}</option>
                                {% endfor %}
                              </select>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 control-label col-form-label" for="input-status"><span data-toggle="tooltip" title="{{ tip_status_global }}">{{ module_status }}</span></label>
                            <div class="col-sm-9">
                              <select name="shipping_xshippingpro_status" id="input-status" class="form-control">
                                {% if shipping_xshippingpro_status %}
                                  <option value="1" selected="selected">{{ text_enabled }}</option>
                                  <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                  <option value="1">{{ text_enabled }}</option>
                                  <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                              </select>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 control-label col-form-label" for="shipping_xshippingpro_debug"><span data-toggle="tooltip" title="{{ tip_debug }}">{{ text_debug }}</span></label>
                            <div class="col-sm-9">
                              <select name="shipping_xshippingpro_debug" id="shipping_xshippingpro_debug" class="form-control">
                                {% if shipping_xshippingpro_debug %}
                                  <option value="1" selected="selected">{{ text_enabled }}</option>
                                  <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                  <option value="1">{{ text_enabled }}</option>
                                  <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                              </select>
                            </div>
                          </div>
                        </div>
                        <div class="tab-pane" id="global-export">
                          <div class="form-group row">
                            <label class="col-sm-3 control-label col-form-label" for="input-import"><span data-toggle="tooltip" title="{{ tip_import }}">{{ text_import }}</span></label>
                            <div class="col-sm-6">
                              <input type="file" class="form-control" id="input-import" accept="text/txt" name="file_import" />
                            </div>
                            <div class="col-sm-3">
                              <button type="submit" form="form-xshippingpro" data-toggle="tooltip" name="action" title="{{ text_import }}" value="import" class="btn btn-primary"><i class="fa fa-upload"></i></button>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 control-label col-form-label" for="input-export"><span data-toggle="tooltip" title="{{ tip_export }}">{{ text_export }}</span></label>
                            <div class="col-sm-9">
                              <a href="{{ export }}" target="_blank" class="btn btn-primary">{{ text_export }}</a>
                            </div>
                          </div>
                        </div>
                        <div class="tab-pane" id="global-help">
                          <div class="form-group row">
                            <div class="col-sm-12">
                               <div class="help-data">
                                <a class="btn btn-info" href="http://opencartmart.com/docs/xshippingpro/index.html" target="_blank" role="button">{{ text_documentation }}</a> <br />
                                <a class="btn btn-warning" href="http://version.opencartmart.com/index.php?v={{ x_version }}&id={{ x_id }}" target="_blank" role="button">{{ text_update }}</a>
                                <br />
                                <a class="btn btn-danger" href="javascript:debugBrowser();" role="button">{{ text_debug_button }}</a>
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="tab-pane" id="global-group">
                          <div class="form-group row">
                            <label class="col-sm-3 control-label col-form-label" for="input-method-group"><span data-toggle="tooltip" title="{{ tip_method_group }}"> {{ text_method_group }} </span></label>
                            <div class="col-sm-9">
                              <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                  <thead>
                                    <tr>
                                      <td class="text-left">
                                        {{ text_group_name }}
                                      </td>
                                      <td class="text-left">
                                        {{ text_group_type }}
                                      </td>
                                      <td class="text-left">
                                        <span data-toggle="tooltip" title="{{ tip_group_limit }}">{{ text_group_limit }}</span>
                                      </td>
                                      <td class="text-left">
                                        <span data-toggle="tooltip" title="{{ tip_group_name }}">{{ entry_group_name }}</span>
                                      </td>
                                    </tr>
                                  </thead>
                                  <tbody>
                                    {{ sub_groups }}
                                  </tbody>
                                </table>
                              </div>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-3 control-label col-form-label" for="input-group"><span data-toggle="tooltip" title="{{ tip_grouping }}">{{ text_group_shipping_mode }}</span></label>
                            <div class="col-sm-9">
                              <select name="shipping_xshippingpro_group" id="input-group" class="form-control shipping_xshippingpro_group">
                                {% for type, name in group_options if type !='and' %}
                                  <option value="{{ type }}" {% if shipping_xshippingpro_group == type %} selected {% endif %}>{{ name }}</option>
                                {% endfor %}
                              </select>
                            </div>
                          </div>
                          <div {% if shipping_xshippingpro_group != 'lowest' and shipping_xshippingpro_group!='highest' %} style="display:none;" {% endif %} id="group-limit" class="form-group row">
                          <label class="col-sm-3 control-label col-form-label" for="input-group-limit"><span data-toggle="tooltip" title="{{ tip_group_limit }}">{{ text_group_limit }}</span></label>
                          <div class="col-sm-9">
                            <select name="shipping_xshippingpro_group_limit" id="input-group-limit" class="form-control">
                              {% for gi in 1..5 %}
                                <option {% if shipping_xshippingpro_group_limit == gi %} selected {% endif %} value="{{ gi }}">  {{ gi }}
                              </option>
                            {% endfor %}
                            </select>
                           </div>
                          </div>
                        </div>
                      </div>
                   </div>
                    {{ form_data }}
                  </div>
                </div>
            </div>
          </form>
       </div>
     </div>
   </div>
</div>

