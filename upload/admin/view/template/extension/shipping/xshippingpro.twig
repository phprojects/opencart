<script type="text/javascript"><!--
var current_tab=1; 
var save_type = '';   
var range ='<tr>'; 
    range += '    <td class="text-left"><input size="15" type="text" name="xshippingpro[rate_start][]" class="form-control" value="__VALUE_START__" /></td>';
